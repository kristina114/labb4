<Window x:Class="labb4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:labb4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="1.091,0.785">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textbox" FontSize="25" Margin="20,40,20,40">Введите значение:</TextBlock>
        <TextBlock x:Name="textbox1" FontSize="25" Margin="20,40,20,40" Grid.Row="1">Вывод:</TextBlock>
        <TextBox x:Name="textbox2"  Margin="57,40,102,27" Grid.Column="1"></TextBox>
        <TextBox x:Name="textbox3"  Margin="57,40,102,28" Grid.Column="1" Grid.Row="1"></TextBox>
        <Button x:Name="ansver" Click="ansver_Click" FontSize="25" Margin="23,24,28,40" Grid.Row="2" Grid.Column="1" Content="применить"/>
    </Grid>
</Window>
